{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "content/*": ["assets/content/*"],
      "app/*": ["src/app/*"],
      "common/*": ["src/common/*"],
      "server/*": ["src/server/*"]
    },
    "target": "esnext",
    "lib": ["WebWorker", "ESNext", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}
